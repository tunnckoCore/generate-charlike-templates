---
install:
  dependencies: ["lazy-cache"]
  devDependencies: [
    "coveralls",
    "mukla",
    "nyc",
    "pre-commit",
    "standard"
  ]
---
{
  "name": "<%= ask('name') %>",
  "version": "<%= ask('version') %>",
  "description": "<%= ask('description') %>",
  "repository": "<%= ask('owner') %>/<%= ask('name') %>",
  "author": "Charlike Mike Reagent <@tunnckoCore> (http://www.tunnckocore.tk)",
  "precommit.silent": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard --verbose",
    "pretest": "npm run lint",
    "test": "nyc node test.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "lazy-cache": "^2.0.1"
  },
  "devDependencies": {
    "coveralls": "^2.11.12",
    "mukla": "^0.4.1",
    "nyc": "^8.1.0",
    "pre-commit": "^1.1.3",
    "standard": "^8.0.0"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "<%= ask('name') %>"
  ],
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
